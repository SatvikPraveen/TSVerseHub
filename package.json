{
  "name": "tsversehub",
  "private": true,
  "version": "1.0.0",
  "description": "A comprehensive, interactive platform for learning TypeScript from basics to advanced concepts",
  "type": "module",
  "keywords": [
    "typescript",
    "learning",
    "education",
    "interactive",
    "playground",
    "react",
    "vite",
    "monaco-editor"
  ],
  "author": "TSVerseHub Team",
  "license": "MIT",
  "homepage": "https://tsversehub.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/tsversehub.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/tsversehub/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "generate:cheatsheets": "tsx scripts/generate-cheatsheets.ts",
    "build:playground": "tsx scripts/build-playground.ts",
    "export:pdf": "tsx scripts/export-pdf.ts",
    "sync:badges": "tsx scripts/sync-readme-badges.ts",
    "prepare": "husky install",
    "prebuild": "npm run type-check && npm run lint",
    "postbuild": "npm run build:playground",
    "clean": "rimraf dist coverage .nyc_output",
    "analyze": "npx vite-bundle-analyzer"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "@monaco-editor/react": "^4.6.0",
    "monaco-editor": "^0.44.0",
    "lucide-react": "^0.263.1",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0",
    "framer-motion": "^10.16.0",
    "recharts": "^2.8.0",
    "zustand": "^4.4.0",
    "react-hot-toast": "^2.4.1",
    "react-helmet-async": "^1.3.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/node": "^20.5.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "vite": "^4.4.5",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-import": "^2.28.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^29.6.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.4.3",
    "playwright": "^1.37.0",
    "@playwright/test": "^1.37.0",
    "tsx": "^3.12.7",
    "rimraf": "^5.0.0",
    "glob": "^10.3.0",
    "chokidar": "^3.5.3",
    "puppeteer": "^21.0.0",
    "marked": "^7.0.0",
    "tailwindcss": "^3.3.0",
    "postcss": "^8.4.27",
    "autoprefixer": "^10.4.14",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^0.16.0",
    "workbox-window": "^7.0.0",
    "@tailwindcss/typography": "^0.5.9",
    "@tailwindcss/forms": "^0.5.4",
    "@tailwindcss/aspect-ratio": "^0.4.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/main.tsx",
      "!src/vite-env.d.ts"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }